@model workforce_management.ViewModels.DepartmentDetail
@using Bangazon.Models;



<h1>
    @Html.DisplayFor(model => model.Department.Name)
    <a asp-action="Edit" asp-route-id="@Model.Department.DepartmentId"><span style="color:dodgerblue;font-size:0.5em" class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
</h1><table class="table table-striped">

        <thead>
            <tr>
                <th>Employee Name</th>
                <th>Computer Assigned</th>
            </tr>
        </thead>
        <tbody>
            @if (@Model.Employees != null)
            {
                @foreach (Employee employee in @Model.Employees)
                {
                    <tr>
                        <td><a asp-controller="Employee" asp-action="Detail" asp-route-id="@employee.EmployeeId">@Html.DisplayFor(model => employee.FirstName) @Html.DisplayFor(model => employee.LastName)</a></td>
                        <td>@Html.DisplayFor(model => employee.Computer.Make) / @Html.DisplayFor(model => employee.Computer.Model)</td>
                    </tr>
                }
            }
            else
            {
                <tr>The @Html.DisplayFor(model => model.Department.Name) department currently contains no employees.</tr>
            }
        </tbody>
    </table>
