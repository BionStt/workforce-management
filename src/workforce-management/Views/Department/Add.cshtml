@model workforce_management.ViewModels.EmployeeList
@using Bangazon.Models;
@{
    ViewData["Title"] = "Add a Department";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Add">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Department.Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="NewDepartment.Name" class="form-control" />
                <span asp-validation-for="NewDepartment.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="NewDepartment.Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="NewDepartment.Description" class="form-control" />
                <span asp-validation-for="NewDepartment.Description" class="text-danger"></span>
            </div>
        </div>
        <input type="submit" value="Add New Product" class="btn btn-default" />
    </div>
</form>