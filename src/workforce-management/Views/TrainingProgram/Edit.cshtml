@model workforce_management.ViewModels.TrainingProgramEdit
@using Bangazon.Models;

<form asp-action="Edit" method="POST">
    <div class="form-horizontal">
        <hr>
        <div class="form-group">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <label asp-for="TrainingProgram.Name" class="col-md-2 control-label">Training Program Name</label>
                <div class="col-md-10">
                    <input asp-for="TrainingProgram.Name" class="form-control" placeholder="@Html.DisplayFor(model => model.TrainingProgram.Name)" />
                    <span asp-validation-for="TrainingProgram.Name" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="TrainingProgram.Description" class="col-md-2 control-label">Description</label>
            <div class="col-md-10">
                <input asp-for="TrainingProgram.Description" class="form-control" placeholder="@Html.DisplayFor(model => model.TrainingProgram.Description)" />
                <span asp-validation-for="TrainingProgram.Description" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-validation-for="Employees" class="col-md-2 control-label">Selected Attendees</label>
            <div class="col-md-10">
                <span class="text-danger"></span>
                @Html.ListBoxFor(m => m.selectedAttendees, new MultiSelectList(Model.EmployeesFullName, "Key", "Value", null), new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label asp-for="TrainingProgram.StartDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @if (Model.TrainingProgram == null)
                {
                    <input class="form-control" type="date" name="NewTrainingProgram.StartDate" id="TrainingProgram_StartDate" data-val="true" data-val-required="A Start Date is required." />
                }
                else
                {
                    <input class="form-control" type="date" name="NewTrainingProgram.StartDate" id="TrainingProgram_StartDate" value="@Model.TrainingProgram.StartDate.ToString("yyyy-MM-dd")" data-val="true" data-val-required="A Start Date is required." />
                }
                <span asp-validation-for="TrainingProgram.StartDate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="TrainingProgram.EndDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @if (Model.TrainingProgram == null)
                {
                    <input class="form-control" type="date" name="TrainingProgram.EndDate" id="TrainingProgram_EndDate" data-val="true" data-val-required="A Start Date is required." />
                }
                else
                {
                    <input class="form-control" type="date" name="TrainingProgram.EndDate" id="TrainingProgram_EndDate" value="@Model.TrainingProgram.EndDate.ToString("yyyy-MM-dd")" data-val="true" data-val-required="A Start Date is required." />
                }
                <span asp-validation-for="TrainingProgram.EndDate" class="text-danger"></span>
            </div>
        </div>

        @Html.Hidden("TrainingProgram.TrainingProgramId", Model.TrainingProgram.TrainingProgramId)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save Changes" class="btn btn-default" />
            </div>
        </div>
    </div>
    </div>
</form>